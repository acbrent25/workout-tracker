<script>
  $(document).ready(function(){


    var weightsForm = $("#weightsForm");
    var weightInput = $("#weight");

    /********************************************
    *            CREATE WEIGHT
    * ******************************************/
    $(weightsForm).on('submit', handleFormSubmit);
    
    function handleFormSubmit(e){
      e.preventDefault();

      // If Todo Title is empty, don't submit
      if(!weightInput){
        return;
      }
      // Contstruct Todo
      var weight = {
        weight: weightInput.val().trim()
      }
      submitWeight(weight);
      $(weightInput).val('');
    }
    // Submit the Todo
    function submitWeight(weight){
      $.post("/api/weights", weight)
          
    }


  });
</script>